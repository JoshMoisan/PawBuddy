<div class="container">
  <div class="card-product">
    <h1>Hi 👋🏻, my name is <strong><%= @dog.name %></strong></h1>


    <div class="card-box">
      <% if @dog.photo.attached? %>
        <%= cl_image_tag @dog.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>

      <div class="card-product-infos">
        <p><%= @dog.description %></p>

        <div class="d-flex justify-content-center items-center">
          <%= link_to "Back", root_path, class: "btn-ghost-black"  %>

          <% unless @dog.user == current_user %>
            <%= link_to "Book", new_dog_booking_path(@dog), class: "btn-ghost-black" %>
          <% end %>

          <% if policy(@dog).edit? %>
            <%= link_to "Edit", edit_dog_path, class: "btn-ghost-black" %>
          <% end %>

          <% if policy(@dog).destroy? %>
            <%= link_to "Delete", dog_path(@dog), data: {turbo_method: :delete}, class: "btn-ghost-black" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
