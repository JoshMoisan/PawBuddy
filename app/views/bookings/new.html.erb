
<div class="container">
  <div class="form-container">
    <h1>New Booking</h1>
  <div class="input-book">
    <%= simple_form_for [@dog, @booking] do |f| %>
      <%= f.input :start_date, as: :date, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :date, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "Request to book", class: "btn btn-ghost-black form-control" %>
    <% end %>
    </div>
  </div>
 </div>
